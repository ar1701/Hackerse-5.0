<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot</title>
    <link rel="stylesheet" href="/css/chat.css">
</head>
<body>
    <div class="background">
        <div class="overlay"></div>
        <div class="chat-container">
            <header class="chat-header">
                <h1>Learn with AI</h1>
                <p>Your interactive educational assistant</p>
            </header>
            <div id="chat-window">
                <div id="messages"></div>
            </div>
            <form id="chat-form">
                <input type="text" id="user-input" placeholder="Ask a question or say hi!" required>
                <button type="submit">Send</button>
            </form>
        </div>
    </div>

    <script src="/js/chat.js"></script>
</body>
</html>
