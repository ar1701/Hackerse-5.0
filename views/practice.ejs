    }

    @keyframes moveBackground {
      0% { transform: translateX(0); }
      100% { transform: translateY(-150px); }
    }

    .content-wrapper {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      text-align: center;
      position: relative;
      padding: 20px; /* Added padding to ensure content stays inside */
      z-index: 1;
    }

    .card {
      background-color: #a5879f;
      border-radius: 8px;
      padding: 20px; /* Adjusted padding to ensure space inside */
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 380px; /* Adjusted max-width */
      box-sizing: border-box;
    }

    .button {
      background-color: #9F7AEA;
      color: white;
      padding: 12px 24px;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.2s;
      display: flex;
      align-items: center;
      justify-content: center; /* Center text and icon */
      gap: 8px; /* Add space between the text and icon */
      width: 100%; /* Full width of the button */
      text-align: center;
    }

    .button:hover {
      background-color: #805AD5;
    }

    .input {
      background-color: #4A5568;
      color: white;
      padding: 10px 16px; /* Adjusted padding */
      border-radius: 8px;
      border: 1px solid #4A5568;
      width: 90%;
      margin-bottom: 16px; /* Space between input and button */
    }

    .title {
      font-size: 3rem;
      font-weight: bold;
      margin-bottom: 2rem;
      background: linear-gradient(to right, #6134bb, #F472B6);
      -webkit-background-clip: text;
      color: transparent;
    }

    .description {
      font-size: 1.5rem;
      color: #081d42;
      max-width: 600px;
      margin-bottom: 3rem;
    }

    /* Navbar Styles */
    .navbar {
      background-color: rgba(96, 69, 107, 0.8); /* Transparent background */
      color: white;
      padding: 10px 20px;
      text-align: center;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 10; /* Ensure the navbar stays above other content */
    }

    .navbar a {
      color: white;
      margin: 0 15px;
      text-decoration: none;
      font-size: 1.2rem;
    }

    .navbar a:hover {
      text-decoration: underline;
    }
  </style>
</head>
